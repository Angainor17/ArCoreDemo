<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="SettingsSeparatorStyle">
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/separatorColor</item>
    </style>

    <style name="Divider">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="Divider.Horizontal" parent="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="Divider.Vertical" parent="Divider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="RouteLineStyle">
        <item name="android:layout_width">1dp</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/circe_regular</item>
        <item name="android:singleLine">false</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="RouteData">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/circe_regular</item>
        <item name="android:singleLine">false</item>
    </style>

    <style name="SubTitle">
        <item name="android:textColor">@color/textGray</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/circe_regular</item>
        <item name="android:singleLine">false</item>
    </style>

    <style name="RouteDescription">
        <item name="android:textColor">@color/textGray</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/circe_regular</item>
        <item name="android:singleLine">false</item>
    </style>

    <style name="Description">
        <item name="android:textColor">@color/textGray</item>
        <item name="android:textSize">18dp</item>
        <item name="android:fontFamily">@font/circe_regular</item>
        <item name="android:singleLine">false</item>
    </style>

    <style name="Incut">
        <item name="android:textColor">@color/colorSubTitle</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/circe_bold</item>
        <item name="android:singleLine">false</item>
    </style>

    <style name="HistoryTab">
        <item name="tabIndicatorColor">@color/orangeSelectedLight</item>
        <item name="tabBackground">@color/orangeUnselected</item>
        <item name="tabPadding">2dp</item>
        <item name="tabTextAppearance">@style/HistoryTabText</item>
    </style>

    <style name="HistoryTabText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14dp</item>
        <item name="fontFamily">@font/circe_regular</item>
    </style>

</resources>
