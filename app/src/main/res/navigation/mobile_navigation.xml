<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_map">

    <fragment
        android:id="@+id/nav_map"

        android:name="com.simferopol.app.ui.map.MapFragment"
        android:label="@string/menu_map"

        tools:layout="@layout/fragment_map">

        <action
            android:id="@+id/action_nav_map_to_nav_ar_location"

            app:destination="@+id/nav_ar_location"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />

        <action
            android:id="@+id/action_nav_map_to_nav_monument"

            app:destination="@+id/nav_monument"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />

        <action
            android:id="@+id/action_nav_map_to_nav_routes"

            app:destination="@+id/nav_routes"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />

        <argument
            android:name="geoObject"
            android:defaultValue="@null"
            app:argType="com.simferopol.api.models.GeoObject"
            app:nullable="true" />

    </fragment>

    <fragment
        android:id="@+id/nav_routes"

        android:name="com.simferopol.app.ui.routes.RoutesFragment"
        android:label="@string/menu_routes"

        tools:layout="@layout/fragment_routes">
        <action
            android:id="@+id/action_nav_routes_to_nav_route"

            app:destination="@+id/nav_route"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>

    <fragment
        android:id="@+id/nav_monuments"

        android:name="com.simferopol.app.ui.monuments.MonumentsFragment"
        android:label="@string/menu_monuments"

        tools:layout="@layout/fragment_monuments">
        <action
            android:id="@+id/action_nav_monuments_to_nav_monument"
            app:destination="@+id/nav_monument"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />

    </fragment>

    <fragment
        android:id="@+id/nav_info_marks"

        android:name="com.simferopol.app.ui.infoMarks.InfoMarksFragment"
        android:label="@string/menu_info_marks"

        tools:layout="@layout/fragment_info_marks" />

    <fragment
        android:id="@+id/nav_category"

        android:name="com.simferopol.app.ui.services.CategoryFragment"
        android:label="@string/menu_services"

        tools:layout="@layout/fragment_categories">
        <action
            android:id="@+id/action_nav_category_to_nav_services"

            app:destination="@+id/nav_services"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>

    <fragment

        android:id="@+id/nav_services"
        android:name="com.simferopol.app.ui.services.ServicesFragment"

        tools:layout="@layout/fragment_services">

        <argument
            android:name="category"
            app:argType="com.simferopol.api.models.Category" />

        <action
            android:id="@+id/action_nav_services_to_nav_service"
            app:destination="@+id/nav_service"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />

        <action
            android:id="@+id/action_nav_services_to_nav_map"
            app:destination="@+id/nav_map"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>

    <fragment

        android:id="@+id/nav_service"
        android:name="com.simferopol.app.ui.services.ServiceFragment">

        <argument
            android:name="service"
            app:argType="com.simferopol.api.models.GeoObject" />

        <action
            android:id="@+id/action_nav_service_to_nav_map"
            app:destination="@+id/nav_map"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />

    </fragment>

    <fragment
        android:id="@+id/nav_history"

        android:name="com.simferopol.app.ui.history.HistoryFragment"
        android:label="@string/menu_history"

        tools:layout="@layout/fragment_history">

        <action
            android:id="@+id/action_nav_history_to_nav_history_pager"

            app:destination="@+id/nav_history_pager"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />

    </fragment>

    <fragment
        android:id="@+id/nav_about"

        android:name="com.simferopol.app.ui.about.AboutFragment"
        android:label="@string/menu_about"

        tools:layout="@layout/fragment_about" />

    <activity
        android:id="@+id/nav_ar"

        android:name="com.simferopol.app.ui.ar.ArFlyerActivity"
        android:label="@string/menu_ar"

        tools:layout="@layout/activity_ar_flyer" />

    <fragment
        android:id="@+id/nav_ar_location"

        android:name="com.simferopol.app.ui.arLocation.view.ARLocationFragment"
        android:label="@string/ar_location"

        tools:layout="@layout/activity_ar_location">

        <action
            android:id="@+id/action_nav_ar_location_to_nav_monument"

            app:destination="@+id/nav_monument"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />

    </fragment>

    <activity
        android:id="@+id/nav_model_3d"

        android:name="com.simferopol.app.ui.model3d.ModelActivity"
        android:label="@string/model_3d"

        tools:layout="@layout/activity_3d_model">

        <argument
            android:name="uri"
            app:argType="string" />

        <argument
            android:name="type"
            app:argType="string" />

        <argument
            android:name="immersiveMode"
            app:argType="string" />

    </activity>

    <fragment
        android:id="@+id/nav_settings"

        android:name="com.simferopol.app.ui.settings.SettingsFragment"
        android:label="@string/menu_settings"

        tools:layout="@layout/fragment_settings" />

    <fragment

        android:id="@+id/nav_route"
        android:name="com.simferopol.app.ui.routes.routeGeoObjects.RouteFragment"

        tools:layout="@layout/fragment_route">

        <argument
            android:name="route"
            app:argType="com.simferopol.api.models.Route" />

        <action
            android:id="@+id/action_nav_route_to_nav_route_map"
            app:destination="@+id/nav_route_map"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />

        <action
            android:id="@+id/action_nav_route_to_nav_monument"
            app:destination="@+id/nav_monument"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />

    </fragment>

    <fragment

        android:id="@+id/nav_monument"
        android:name="com.simferopol.app.ui.monuments.MonumentFragment">

        <argument
            android:name="monument"
            app:argType="com.simferopol.api.models.GeoObject" />

        <action
            android:id="@+id/action_nav_monument_to_nav_model_3d"
            app:destination="@+id/nav_model_3d"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />

        <action
            android:id="@+id/action_nav_monument_to_nav_map"
            app:destination="@+id/nav_map"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />

    </fragment>

    <fragment

        android:id="@+id/nav_route_map"
        android:name="com.simferopol.app.ui.routes.RouteMapFragment"

        tools:layout="@layout/fragment_route_map">

        <argument
            android:name="route"
            app:argType="com.simferopol.api.models.Route" />

        <action
            android:id="@+id/action_nav_route_map_to_nav_monument"
            app:destination="@+id/nav_monument"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />

        <action
            android:id="@+id/action_nav_route_map_to_nav_route"
            app:destination="@+id/nav_route"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>

    <fragment

        android:id="@+id/nav_history_pager"
        android:name="com.simferopol.app.ui.history.HistoryPagerFragment">

        <argument
            android:name="storyId"
            app:argType="integer" />

    </fragment>

</navigation>