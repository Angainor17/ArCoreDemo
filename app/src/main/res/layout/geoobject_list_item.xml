<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="vm"
            type="com.simferopol.app.ui.routes.routeGeoObjects.vm.GeoObjectVm" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:focusable="true"
        android:clickable="true"
        android:onClick="@{()->vm.onItemClick(parent)}"

        tools:layout_height="wrap_content">

        <View
            android:id="@+id/icon"

            android:layout_width="7dp"
            android:layout_height="7dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="24dp"
            android:background="@drawable/ic_bullet_dot"

            app:layout_constraintBottom_toBottomOf="@id/titleTv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/titleTv" />

        <View
            android:id="@+id/bottomLine"

            style="@style/RouteLineStyle"
            android:layout_height="0dp"
            android:visibility="@{vm.isLast() ? View.GONE: View.VISIBLE }"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/icon"
            app:layout_constraintStart_toStartOf="@id/icon"
            app:layout_constraintTop_toBottomOf="@id/icon" />

        <View
            android:id="@+id/topLine"

            style="@style/RouteLineStyle"
            android:layout_height="0dp"
            android:visibility="@{vm.isFirst() ? View.GONE: View.VISIBLE }"

            app:layout_constraintBottom_toTopOf="@id/icon"
            app:layout_constraintEnd_toEndOf="@id/icon"
            app:layout_constraintStart_toStartOf="@id/icon"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/addressTv"

            style="@style/SubTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:text="@{vm.address}"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/icon"
            app:layout_constraintTop_toTopOf="parent"

            tools:text="Адресс " />

        <TextView
            android:id="@+id/titleTv"

            style="@style/Title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:drawablePadding="8dp"
            android:text="@{vm.name}"
            android:textColor="@color/colorPrimaryDark"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/icon"
            app:layout_constraintTop_toBottomOf="@+id/addressTv"
            tools:text="Золотая лихорадка в Енисейске" />

        <TextView
            android:id="@+id/descriptionTv"

            style="@style/RouteDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:text="@{vm.about}"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/titleTv"

            app:layout_constraintTop_toBottomOf="@+id/titleTv"
            tools:text="Описание asdasd asdasd sd asd asdsadasdasdasdasdasdsadasdasds sad sds" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>