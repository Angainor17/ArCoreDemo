<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />
        <variable
            name="vm"
            type="com.simferopol.app.ui.monuments.vm.MonumentVm" />

    </data>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/monumentContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/headerContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black">

                <ImageView
                    android:id="@+id/previewImage"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:alpha="0.3"
                    android:scaleType="centerCrop"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:loadImage="@{vm.imageUrl}" />

                <TextView
                    android:id="@+id/titleTv"
                    style="@style/Title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="@{vm.name}"

                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_percent="0.8"

                    tools:text="Золотая лихорадка в Енисейске" />

                <ImageView
                    android:id="@+id/map_button"

                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginEnd="16dp"
                    android:onClick="@{()->vm.onMapClick(parent)}"
                    android:src="@mipmap/ic_location"

                    app:layout_constraintBottom_toBottomOf="@+id/titleTv"
                    app:layout_constraintStart_toEndOf="@+id/titleTv"
                    app:layout_constraintTop_toTopOf="@+id/titleTv" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <ImageView
                android:id="@+id/model_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginTop="106dp"
                android:layout_marginEnd="74dp"
                android:background="@drawable/ic_play_button"
                android:onClick="@{(v)->vm.onModelClick(v)}"
                android:padding="10dp"
                android:src="@drawable/icon3d"
                android:visibility="@{vm.model? View.VISIBLE: View.GONE}"

                app:layout_constraintEnd_toEndOf="@id/monumentContainer"
                app:layout_constraintTop_toTopOf="@id/monumentContainer" />

            <TextView
                android:id="@+id/description"
                style="@style/Description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="32dp"
                android:text="@{vm.content}"

                app:layout_constraintTop_toBottomOf="@id/headerContainer"
                tools:text="Золотая лихорадка в Енисейске" />

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/photos_viewpager"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"

                app:layout_constraintEnd_toEndOf="@id/description"
                app:layout_constraintStart_toStartOf="@id/description"
                app:layout_constraintTop_toBottomOf="@id/description" />

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/pager_tab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"

                app:layout_constraintEnd_toEndOf="@id/photos_viewpager"
                app:layout_constraintStart_toStartOf="@id/photos_viewpager"
                app:layout_constraintTop_toBottomOf="@id/photos_viewpager"
                app:tabBackground="@drawable/tab_selector"
                app:tabGravity="center"
                app:tabIndicatorHeight="0dp" />

            <include
                android:id="@+id/player"
                layout="@layout/audio_player_element"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="106dp"
                android:visibility="gone"

                app:layout_constraintTop_toTopOf="@+id/headerContainer" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</layout>