<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="vm"
            type="com.simferopol.app.ui.settings.vm.SettingsVm" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/language_change_view"
            app:vm="@{vm}"
            />

        <View
            android:layout_width="match_parent"
            style="@style/SettingsSeparatorStyle" />

        <include
            layout="@layout/round_icon_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/settings_margin"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"

            app:onClickListener="@{()->vm.sendStatisticClick()}"
            app:text="@{@string/send_statistic}"
            app:isChecked="@{true}"
            />

        <View
            android:layout_width="match_parent"
            style="@style/SettingsSeparatorStyle" />

        <include layout="@layout/settings_audio_view"
            app:vm="@{vm}" />

        <View
            android:layout_width="match_parent"
            style="@style/SettingsSeparatorStyle" />

        <include
            layout="@layout/settings_about_app"

            app:vm="@{vm}"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/settings_margin"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp" />

    </LinearLayout>

</layout>