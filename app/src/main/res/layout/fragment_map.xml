<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <import type="com.simferopol.app.utils.models.ViewState" />

        <variable
            name="vm"
            type="com.simferopol.app.ui.map.MapVM" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            layout="@layout/map_view"
            android:visibility="@{vm.viewState==ViewState.CONTENT? View.VISIBLE: View.GONE}"

            app:vm="@{vm}" />

        <include
            layout="@layout/map_view_controls"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/routeButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:vm="@{vm}" />

        <ImageView
            android:id="@+id/find"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="130dp"
            android:background="@drawable/round_map_icon"
            android:elevation="15dp"
            android:onClick="@{()->vm.onArClick()}"

            android:padding="8dp"
            android:src="@mipmap/ic_ar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/routeButton"
            style="@style/SelectRoute"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:background="@drawable/transparent_btn_bg"
            android:onClick="@{()->vm.onSelectRouteClick(footerContainer)}"
            android:paddingVertical="14dp"
            android:text="@string/select_route"
            android:textAlignment="center"

            app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
            app:layout_constraintEnd_toEndOf="@+id/linearLayout"
            app:layout_constraintStart_toStartOf="@+id/linearLayout"
            app:layout_constraintWidth_percent="0.9" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/footerContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:onClick="@{()->vm.onMonumentClick(footerContainer)}"
            android:visibility="gone"

            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:id="@+id/previewImage"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:scaleType="centerCrop"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:loadImage="@{vm.currentObject.preview}" />


            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/transparent_img_bg"

                app:layout_constraintBottom_toBottomOf="@id/previewImage"
                app:layout_constraintEnd_toEndOf="@id/previewImage"
                app:layout_constraintStart_toStartOf="@id/previewImage"
                app:layout_constraintTop_toTopOf="@id/previewImage" />

            <TextView
                android:id="@+id/titleTv"
                style="@style/Title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="16dp"
                android:ellipsize="end"
                android:maxLines="3"
                android:text="@{vm.currentObject.name}"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.8"
                tools:text="Золотая лихорадка в Енисейске" />

            <TextView
                android:id="@+id/address"
                style="@style/SubTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/address"

                app:layout_constraintStart_toStartOf="@id/titleTv"
                app:layout_constraintTop_toBottomOf="@id/titleTv" />

            <TextView
                android:id="@+id/addressTv"
                style="@style/RouteData"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@{vm.currentObject.address}"

                app:layout_constraintStart_toStartOf="@id/titleTv"
                app:layout_constraintTop_toBottomOf="@id/address"
                tools:text="Золотая лихорадка в Енисейске" />


            <TextView
                android:id="@+id/category"
                style="@style/SubTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                app:layout_constraintBottom_toTopOf="@id/titleTv"
                app:layout_constraintStart_toStartOf="@id/titleTv"
                tools:text="category" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/model_button"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/ic_play_button"
            android:padding="10dp"
            android:src="@drawable/icon3d"
            android:visibility="gone"

            app:layout_constraintEnd_toStartOf="@id/play_button"
            app:layout_constraintTop_toTopOf="@id/play_button" />

        <ImageView
            android:id="@+id/play_button"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="110dp"
            android:background="@drawable/ic_play_button"
            android:padding="10dp"
            android:src="@mipmap/ic_play"
            android:visibility="gone"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/footerContainer" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>