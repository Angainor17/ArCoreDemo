<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <import type="com.simferopol.app.utils.models.ViewState" />

        <variable
            name="vm"
            type="com.simferopol.app.ui.map.MapVM" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

                <com.yandex.mapkit.mapview.MapView
                    android:id="@+id/mapview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

        </LinearLayout>


        <ImageView
            android:id="@+id/zoomIn"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="100dp"
            android:background="@drawable/round_map_icon"
            android:onClick="@{()->vm.onZoomInClick()}"
            android:padding="10dp"
            android:src="@mipmap/ic_map_plus"

            app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/linearLayout" />

        <ImageView
            android:id="@+id/zoomOut"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/round_map_icon"
            android:onClick="@{()->vm.onZoomOutClick()}"
            android:padding="10dp"
            android:src="@mipmap/ic_map_minus"

            app:layout_constraintEnd_toEndOf="@id/zoomIn"
            app:layout_constraintTop_toBottomOf="@id/zoomIn" />

        <ImageView
            android:id="@+id/geoLocation"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/round_map_icon"
            android:onClick="@{()->vm.onLocateClick()}"
            android:padding="10dp"
            android:src="@mipmap/ic_map_locate"

            app:layout_constraintEnd_toEndOf="@id/zoomOut"
            app:layout_constraintTop_toBottomOf="@id/zoomOut" />

        <ImageView
            android:id="@+id/find"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/round_map_icon"
            android:onClick="@{()->vm.onArClick()}"
            android:padding="8dp"
            android:src="@mipmap/ic_ar"

            app:layout_constraintBottom_toTopOf="@id/route_button"
            app:layout_constraintStart_toStartOf="@id/route_button" />

        <TextView
            android:id="@+id/route_button"
            style="@style/SelectRoute"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:background="@drawable/transparent_btn_bg"
            android:onClick="@{()->vm.onSelectRouteClick(footerContainer)}"
            android:paddingVertical="14dp"
            android:text="@string/select_route"
            android:textAlignment="center"

            app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
            app:layout_constraintEnd_toEndOf="@+id/linearLayout"
            app:layout_constraintStart_toStartOf="@+id/linearLayout"
            app:layout_constraintWidth_percent="0.9" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/footerContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:visibility="gone"
            android:onClick="@{()->vm.onMonumentClick(footerContainer)}"

            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:id="@+id/previewImage"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:scaleType="centerCrop"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:loadImage="@{vm.currentObject.preview}" />


            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/transparent_img_bg"

                app:layout_constraintBottom_toBottomOf="@id/previewImage"
                app:layout_constraintEnd_toEndOf="@id/previewImage"
                app:layout_constraintStart_toStartOf="@id/previewImage"
                app:layout_constraintTop_toTopOf="@id/previewImage"

                />

            <TextView
                android:id="@+id/titleTv"
                style="@style/Title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="16dp"
                android:ellipsize="end"
                android:maxLines="3"
                android:text="@{vm.currentObject.name}"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.8"
                tools:text="Золотая лихорадка в Енисейске" />

            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/address"
                style="@style/SubTitle"

                app:layout_constraintStart_toStartOf="@id/titleTv"
                app:layout_constraintTop_toBottomOf="@id/titleTv"
                />

            <TextView
                android:id="@+id/addressTv"
                style="@style/RouteData"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@{vm.currentObject.address}"

                app:layout_constraintStart_toStartOf="@id/titleTv"
                app:layout_constraintTop_toBottomOf="@id/address"
                tools:text="Золотая лихорадка в Енисейске" />


            <TextView
                android:id="@+id/category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/SubTitle"

                tools:text="category"
                app:layout_constraintStart_toStartOf="@id/titleTv"
                app:layout_constraintBottom_toTopOf="@id/titleTv"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/model_button"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/ic_play_button"
            android:padding="10dp"
            android:src="@drawable/icon3d"
            android:visibility="gone"

            app:layout_constraintEnd_toStartOf="@id/play_button"
            app:layout_constraintTop_toTopOf="@id/play_button" />

        <ImageView
            android:id="@+id/play_button"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/ic_play_button"
            android:padding="10dp"
            android:src="@mipmap/ic_play"
            android:layout_marginBottom="110dp"
            android:visibility="gone"

            app:layout_constraintEnd_toEndOf="@id/footerContainer"
            app:layout_constraintBottom_toBottomOf="parent" />

<!--        <include-->
<!--            layout="@layout/loading_view"-->

<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="match_parent"-->
<!--            android:visibility="gone" />-->
<!--            android:visibility="@{vm.viewState==ViewState.LOADING? View.VISIBLE: View.GONE}" />-->

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>