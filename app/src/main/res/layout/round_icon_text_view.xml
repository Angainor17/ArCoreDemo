<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="text"
            type="String" />

        <variable
            name="isChecked"
            type="Boolean" />

        <variable
            name="onClickListener"
            type="android.view.View.OnClickListener" />

    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="@{onClickListener}"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:fontFamily="@font/circe_regular"
            android:text="@{text}"
            android:textColor="@color/textGray"
            android:textSize="15dp"

            tools:text="Русский" />

        <View
            android:layout_width="@dimen/round_icon_size"
            android:layout_height="@dimen/round_icon_size"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="16dp"
            android:background="@drawable/round_view_icon"
            android:backgroundTint="@{isChecked? @color/orangeSelected : @color/unselectedColor}" />

    </LinearLayout>

</layout>